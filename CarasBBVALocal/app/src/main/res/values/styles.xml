<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Configuración del fondo -->
        <item name="android:windowBackground">@drawable/my_background</item>

        <!-- Ocultar la barra de notificaciones -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:fontFamily">@font/overpassheavy</item>

        <item name="android:itemBackground">#FBF3F3</item>
        <item name="android:popupBackground">#FBF3F3</item> <!-- Fondo gris para el despliegue -->
        <item name="android:background">#FFFFFF</item> <!-- Fondo blanco para el ítem seleccionado -->
    </style>

    <style name="SpinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">#00A6FF</item> <!-- Cambiar color de texto a gris -->
        <item name="android:textAppearance">@style/SpinnerTextAppearance</item> <!-- Establecer apariencia de texto -->
    </style>

    <style name="SpinnerTextAppearance">
        <item name="android:fontFamily">@font/overpassregular</item>
        <item name="android:textColor">#808080</item> <!-- Cambiar color de texto a gris -->
    </style>
</resources>